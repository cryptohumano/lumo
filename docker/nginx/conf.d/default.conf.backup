# Configuración principal del sitio
# HTTP - Redirección a HTTPS y Let's Encrypt
server {
    listen 80;
    listen [::]:80;
    server_name transportesedimburgo.com www.transportesedimburgo.com;

    # Para Let's Encrypt
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    # Servir el website
    # En desarrollo: website corre en puerto 5173 (vite dev server)
    # En producción: website corre en puerto 80 (nginx interno)
    location / {
        # Redirección a HTTPS (descomentar después de obtener certificados)
        # return 301 https://$host$request_uri;
        
        # Proxy al website - detectar si es desarrollo o producción
        # Intentar primero puerto 5173 (desarrollo), si falla usar 80 (producción)
        set $website_backend "http://website:5173";
        
        # En producción, usar puerto 80
        # proxy_pass http://website:80;
        
        # Por ahora, usar desarrollo (5173)
        proxy_pass http://website:5173;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts para desarrollo
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
    
    # API routing
    location /api/ {
        proxy_pass http://backend:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }
}

# API Backend - Proxy
server {
    listen 80;
    server_name api.transportesedimburgo.com;

    location / {
        proxy_pass http://backend:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }
}

