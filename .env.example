# Configuración para Lumo - Producción
# Copia este archivo a .env y ajusta los valores según tu entorno

# ============================================
# Base de Datos PostgreSQL
# ============================================
POSTGRES_USER=lumo
POSTGRES_PASSWORD=changeme_secure_password_here
POSTGRES_DB=lumo
DATABASE_URL=postgresql://lumo:changeme_secure_password_here@postgres:5432/lumo?schema=public

# ============================================
# MinIO Object Storage
# ============================================
MINIO_ROOT_USER=lumoadmin
MINIO_ROOT_PASSWORD=lumoadmin123_secure_password_here
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET=lumo-documents
MINIO_BUCKET_NAME=lumo-documents

# ============================================
# Backend API
# ============================================
NODE_ENV=production
PORT=3000
BACKEND_PORT=3000
BACKEND_TARGET=runner

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=https://lumo.peranto.app,https://www.lumo.peranto.app

# ============================================
# Frontend
# ============================================
FRONTEND_TARGET=production
VITE_API_URL=https://lumo.peranto.app/api
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
